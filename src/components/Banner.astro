---
import { Icon } from "astro-icon/components";

import aoyukiConfig from "../../aoyuki.config";
import { GetCoverURLForUnspecifiedEntry } from "../utils/cover";

export interface Props {
	title?: string;
	subTitle?: string;
	cover?: string;
	coverCredit?: { text: string; url?: string };
	slug?: string;
}

const { title, subTitle, cover, slug, coverCredit } = Astro.props;

const hasTitle = title !== undefined || subTitle !== undefined;
const hasHeaderImg = cover !== undefined || slug !== undefined;

const carouselImgsList = aoyukiConfig.banners;
const carouselImgsCount = carouselImgsList.length;
const carouselAnimationTime = `${carouselImgsCount * 6}s`;

const carouselAnimationCSS = `
  @keyframes carousel-animation {
    0% {
      opacity: 0;
      transform: scale(1);
    }
    3% {
      opacity: 1;
    }
    8% {
      opacity: 1;
      animation-timing-function: ease-out;
    }
    ${100 / carouselImgsCount}% {
      opacity: 1;
    }
    ${100 / carouselImgsCount + 50 / carouselImgsCount}% {
      opacity: 0;
      animation-timing-function: ease-out;
    }
    100% {
      opacity: 0;
      transform: scale(2);
    }
  }

  @keyframes carousel-credit-animation {
    0% {
      opacity: 0;
      visibility: hidden;
    }
    1.5% {
      opacity: 1;
      visibility: visible;
    }
    ${100 / carouselImgsCount - 1.5}% {
      opacity: 1;
      visibility: visible;
    }
    ${100 / carouselImgsCount}% {
      opacity: 0;
      visibility: hidden;
    }
    100% {
      opacity: 0;
      visibility: hidden;
    }
  }
`;
---

<style is:global set:html={carouselAnimationCSS}></style>

<div id="banner" class="banner onload-animation-fade-in">
  <div class="transition-main banner-inner h-full w-full">
    {
      !hasHeaderImg && (
        <div class="carousel">
          <ul id="carousel_imgs">
            {carouselImgsList.map((img, index) => (
              <li
                class={"item lozad banner-" + index}
                style={{ animationDelay: `${index * 6}s` }}
                data-background-image={img.src}
              />
            ))}
          </ul>
        </div>
      )
    }
    {
      hasHeaderImg && (
        <div class="cover">
          <img
            class="item lozad"
            data-src={cover ?? GetCoverURLForUnspecifiedEntry(slug ?? "").src}
            alt="PostCover"
          />
        </div>
      )
    }
    <div class="relative h-[95%] w-full">
      <div
        class="absolute left-1/2 top-1/2 w-4/5 -translate-x-1/2 -translate-y-1/2 lg:w-3/4"
      >
        <div class="flex flex-col">
          <h1
            class:list={[hasTitle ? "title-normal" : "title-index"]}
            class="title"
          >
            {title ?? aoyukiConfig.title}
          </h1>
          <h2 class="subtitle">{subTitle ?? aoyukiConfig.subTitle}</h2>
        </div>
      </div>
    </div>
    <div
      id="banner-credits"
      class="pointer-events-none absolute -bottom-[1px] h-[10vh] max-h-[9.375rem] min-h-[3.125rem] w-full md:h-[15vh]"
      style="z-index: 20;"
    >
      <!-- credit -->
      {
        !hasHeaderImg && (
          <>
            {carouselImgsList.map(
              (item, index) =>
                item.credit && (
                  <div
                    class="credit-item group pointer-events-auto absolute right-6 top-4 z-20 flex h-9 items-center justify-center rounded-lg bg-black/40 px-3 text-white/75 transition-all hover:bg-black/70 hover:pr-9"
                    style={{ animationDelay: `${index * 6}s` }}
                  >
                    <Icon
                      class="mr-1 text-[1.25rem] text-white/75"
                      name="material-symbols:copyright-outline-rounded"
                    />
                    <div class="text-xs text-white/75">{item.credit.text}</div>
                    <Icon
                      class:list={[
                        "absolute right-4 text-[0.75rem] text-[oklch(0.75_0.14_var(--hue))] opacity-0 transition",
                        { "group-hover:opacity-100": !!item.credit.url },
                      ]}
                      name="fa6-solid:arrow-up-right-from-square"
                    />
                    {item.credit.url && (
                      <a
                        href={item.credit.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="absolute inset-0 z-30 block"
                        aria-label={`Credit: ${item.credit.text}`}
                      />
                    )}
                  </div>
                ),
            )}
          </>
        )
      }

      {
        hasHeaderImg && coverCredit && (
          <div class="onload-animation group pointer-events-auto absolute right-6 top-4 z-20 flex h-9 items-center justify-center rounded-lg bg-black/40 px-3 text-white/75 transition-all hover:bg-black/70 hover:pr-9">
            <Icon
              class="mr-1 text-[1.25rem] text-white/75"
              name="material-symbols:copyright-outline-rounded"
            />
            <div class="text-xs text-white/75">{coverCredit.text}</div>
            <Icon
              class:list={[
                "absolute right-4 text-[0.75rem] text-[oklch(0.75_0.14_var(--hue))] opacity-0 transition",
                { "group-hover:opacity-100": !!coverCredit.url },
              ]}
              name="fa6-solid:arrow-up-right-from-square"
            />
            {coverCredit.url && (
              <a
                href={coverCredit.url}
                target="_blank"
                rel="noopener noreferrer"
                class="absolute inset-0 z-30 block"
                aria-label={`Credit: ${coverCredit.text}`}
              />
            )}
          </div>
        )
      }
    </div>
  </div>

  <div class="waves" id="header-waves">
    <svg
      class="waves"
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      viewBox="0 24 150 28"
      preserveAspectRatio="none"
      shape-rendering="auto"
    >
      <defs>
        <path
          id="gentle-wave"
          d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
        >
        </path>
      </defs>
      <g class="parallax">
        <use
          xlink:href="#gentle-wave"
          x="48"
          y="0"
          class="opacity-25"
          style={{ animationDelay: "-2s", animationDuration: "7s" }}></use>
        <use
          xlink:href="#gentle-wave"
          x="48"
          y="3"
          class="opacity-50"
          style={{ animationDelay: "-3s", animationDuration: "10s" }}></use>
        <use
          xlink:href="#gentle-wave"
          x="48"
          y="5"
          class="opacity-75"
          style={{ animationDelay: "-4s", animationDuration: "13s" }}></use>
        <use
          xlink:href="#gentle-wave"
          x="48"
          y="7"
          style={{ animationDelay: "-5s", animationDuration: "20s" }}></use>
      </g>
    </svg>
  </div>
</div>

<style define:vars={{ carouselAnimationTime }}>
  .banner {
    @apply relative h-[calc(var(--banner-height)*3/4)] opacity-100 lg:h-[var(--banner-height)];
  }

  .carousel {
    @apply absolute left-0 top-0 -z-10 block h-[calc(var(--banner-height)*3/4)] w-full overflow-hidden bg-white lg:h-[var(--banner-height)];
    animation-fill-mode: forwards;
  }

  .carousel::before {
    @apply absolute left-0 top-0 z-10 block h-full w-full bg-black/25 transition-all content-[''];
    @apply dark:bg-black/30;
  }

  .carousel .item {
    @apply absolute left-0 top-0 z-0 h-full w-full origin-center bg-cover bg-center bg-no-repeat opacity-0;
    animation: carousel-animation var(--carouselAnimationTime) linear infinite
      0s;
    backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  .credit-item {
    @apply opacity-0;
    animation: carousel-credit-animation var(--carouselAnimationTime) linear
      infinite 0s;
  }

  /* Force stop animations during Swup transitions to prevent hang */
  :global(html.is-changing) .carousel .item,
  :global(html.is-changing) .credit-item {
    animation: none !important;
    display: none !important;
  }

  .cover {
    @apply absolute left-0 top-0 z-0 block h-[var(--banner-height)] w-full overflow-hidden bg-white;
  }

  .cover::before {
    @apply absolute left-0 top-0 z-10 block h-full w-full bg-black/25 transition-all content-[''];
    @apply dark:bg-black/30;
  }

  .cover .item {
    @apply h-full w-full object-cover;
  }

  .title {
    @apply mt-8 text-center font-bold text-[var(--title-color)] drop-shadow-lg lg:mt-1;
    font-family: var(--title-font);
  }

  .title-index {
    @apply mb-0 text-6xl leading-[5rem] lg:mb-1 lg:text-8xl;
  }

  .title-normal {
    @apply mb-1 text-3xl lg:text-5xl;
  }

  .subtitle {
    @apply text-center text-xl text-[var(--subtitle-color)] drop-shadow-md lg:text-3xl;
    font-family: var(--subtitle-font);
  }

  .waves {
    @apply absolute -bottom-[1px] h-[10vh] max-h-[9.375rem] min-h-[3.125rem] w-full;
    @apply md:h-[15vh];
  }

  .waves > .parallax use {
    @apply fill-[var(--background-color)];
    animation: wave 25s cubic-bezier(0.5, 0.5, 0.45, 0.5) infinite;
  }

  @keyframes wave {
    0% {
      transform: translate3d(-90px, 0, 0);
    }
    100% {
      transform: translate3d(85px, 0, 0);
    }
  }

  @keyframes banner-onload-animation {
    0% {
      opacity: 0;
      height: calc(var(--banner-height) + 4rem);
    }
    100% {
      opacity: 1;
      height: var(--banner-height);
    }
  }
</style>
